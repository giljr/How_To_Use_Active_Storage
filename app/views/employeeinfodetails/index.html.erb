<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Employee Info Details</h1>
      <%= link_to 'Create', new_employeeinfodetail_path, class: "btn btn-primary mt-4 mb-3" %>

      <table class="table table-bordered">
        <thead>
          <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Actions / Operations</th>
          </tr>
        </thead>
        <tbody>
          <% if @employees.any? %>
            <% @employees.each do |employee| %>
              <tr>
                <td><%= employee.id %></td>
                <td><%= employee.firstname %></td>
                <td><%= employee.lastname %></td>
                <td>
                
                  <%= link_to 'Details', employeeinfodetail_path(employee), class: 'btn btn-info' %>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="4" class="text-center">No records found</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
